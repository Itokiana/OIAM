
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "clients/shared/error_messages", resource: resource %>
  
  <style type="text/css">
    li {
      list-style: lower-norwegian;
    }
  </style>

  <ol>
    <li>Détails Entreprise</li>
    <li>Détails Recruteur</li>
    <li>Création de compte</li>
    <li>Signature du contrat</li>
  </ol>
 


  <fieldset>
    <legend>Détails Entreprise</legend>

    <div class="form-group">
      <input autofocus="autofocus" class="form-control" required="required" autocomplete="entreprise_name" type="text" name="entreprise_name" id="entreprise_name" placeholder="Entreprise">
    </div>

    <div class="form-group">
      <input autofocus="autofocus" class="form-control" required="required" autocomplete="entreprise_adresse" type="text" name="entreprise_adresse" id="entreprise_adresse" placeholder="Adresse">
    </div>

    <div class="row">
      <div class="col-sm-6 form-group">
        <input autofocus="autofocus" class="form-control" required="required" autocomplete="postal_code" type="text" name="postal_code" id="postal_code" placeholder="Code Postal">
      </div>
      <div class="col-sm-6 form-group">
        <input autofocus="autofocus" class="form-control" required="required" autocomplete="city" type="text" name="city" id="city" placeholder="Ville">
      </div>
    </div>

    <div class="form-group">
      <input autofocus="autofocus" class="form-control" required="required" autocomplete="entreprise_siret" type="text" name="entreprise_siret" id="entreprise_siret" placeholder="Numéro de siret">
    </div>

    <div class="form-group">
      <input autofocus="autofocus" class="form-control" required="required" autocomplete="entreprise_site" type="text" name="entreprise_site" id="entreprise_site" placeholder="Site Internet">
    </div>

    <div class="form-group">
      <textarea class="form-control" required="required" autocomplete="entreprise_description" type="text" name="entreprise_description" id="entreprise_description" autofocus="autofocus" rows="3" placeholder="Description de votre activité"></textarea>
    </div>

    <div class="form-group">
      <input autofocus="autofocus" class="form-control" required="required" autocomplete="code_naf" type="text" name="code_naf" id="code_naf" placeholder="Code NAF">
    </div>

    <span class="btn btn-primary">
      SUIVANT
    </span>
  </fieldset>

  <fieldset>
    <legend>Détails Recruteur</legend>

    <div class="form-group">
      
      <%= f.text_field :last_name, autofocus: true, class:"form-control", autocomplete: "last_name", required: true, placeholder: 'Nom' %>
    </div>

    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, class:"form-control", autocomplete: "first_name", required: true, placeholder: 'Prénom' %>
    </div>

    <div class="form-group">
      <%= f.text_field :fonction, autofocus: true, class:"form-control", autocomplete: "fonction", required: true, placeholder: 'Fonction' %>
    </div>

    <div class="form-group">
      <%= f.email_field :mail, autofocus: true, class:"form-control", autocomplete: "mail", required: true, placeholder: 'Mail' %>
    </div>

    <div class="form-group">
      <%= f.text_field :telephone, autofocus: true, class:"form-control", autocomplete: "telephone", required: true, placeholder: 'Téléphone' %>
    </div>

    <span class="btn btn-primary">
      SUIVANT
    </span>

  </fieldset>

  <fieldset>
    <legend>Création de compte</legend>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", required: true, placeholder: 'IDENTIFIANT' %>
    </div>
    <div class="form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "new-password", required: true, placeholder: 'MOT DE PASSE' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", required: true, placeholder: 'CONFIRMATION DU MOT DE PASSE' %>
    </div>

    <span class="btn btn-primary">
      SUIVANT
    </span>

  </fieldset>


  <fieldset>
    <legend>Signature du contrat</legend>
    <div>
      <p>Vous vous apprêtez à devenir client de One In A Million.<br>Nous vous remercions de lire attentivement nos conditions générales de vente.</p>
      <p>Conditions générales de vente</p>
      <img src="https://fakeimg.pl/871x552/ff0000,128/000,255">
      <br>
    </div>
    <div class="form-group">
      <input id="cgu" type="checkbox" class="form-check-input" required="required"><label for="cgu" class="form-check-label">En cochant cette case, je reconnais avoir pris connaissance d’annulation et de responsabilités (telles qu’indiquées dans le programme).</label>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit "VALIDER", class:'btn btn-primary' %>
  </div>

<% end %>

<script data-turbolinks-track="reload" type="text/javascript" src="/js/data.json"></script>

<script data-turbolinks-track="reload" type="text/javascript" src="/js/show_city.js"></script>
