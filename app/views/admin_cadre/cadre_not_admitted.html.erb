<% @title="Candidats" %>
<link rel="stylesheet" href="/css/mes_cand_admin.css" />
<style>
	.filter-cand {
		display: flex;
		justify-content: flex-end;
		border-bottom: 1px solid #F0F2F4;
		padding-bottom: 10px;
	}

	.filter-cand span {
		margin: 1px;
		background: #e3d7bf;
		color: #fff;
		text-align: center;
		text-transform: uppercase;
		border: 1px solid #e3d7bf;
		padding: 5px 10px;
		font-size: 12px;
		cursor: pointer;
	}

	.filter-cand span:hover {
		background: #fff;
		color: #e3d7bf;
		border: 1px solid #e3d7bf;
	}

	.mybtn-sh {
		text-transform: uppercase;
		background: #d6b36a;
		color: #fff;
		padding: 10px 40px;
		cursor: pointer;
		font-size: 14px;
		cursor: pointer;
		text-decoration: none;
	}

	.mybtn-sh:hover {
		background: #fff;
		border: 1px solid #d6b36a;
		color: #d6b36a;
		text-decoration: none;
	}

	.myCand {
		margin-top: 20px;
		border: 1px solid #ccc;
	}

	.desc-candd {
		margin-top: 20px;
	}

	.desc-candd .name {
		font-size: 16px;
		font-weight: bold;
	}

	.desc-candd .score {
		font-size: 14px;
	}

	.cont-btn {
		margin-top: 50px;
	}

	.cd-pdp {
		border-radius: 50%;
	}

	.auc {
		margin-top: 20px;
	}

	.ss {
		border-right: 1px solid #ccc;
	}

</style>
<script src="https://kit.fontawesome.com/d06d35ede2.js" crossorigin="anonymous"></script>

<div class="client-column">
	<div class="client-menu-left">
		<%= render partial: "admin_cadre/left_menu_link" %>
	</div>
	<div class="cp-box">
  		<div class="fcp-box">
			<h3 class="title" style="color: #d6b36a !important;">CANDIDAT NON ADMIS</h3>

			<div class="filter-cand">
				<span id="potential_test_js">TEST POTENTIEL</span>
				<span id="fit_test_js">TEST FIT</span>
				<span id="rehetra_js">TOUS</span>
			</div>

			<div class="fc-item">
				<% @cadre_infos.each do |cadre| %>
					<div class="candd click_<%= cadre.not_admited_test %>">
		               <div class="row myCand">
		               <div class="col-sm-3 ss">
		                 <% unless cadre.image.nil? %>
		                   <%= image_tag(cadre.image, alt: 'photo de profil', style: 'width:120px; heigh:120px', class: 'cd-pdp')%>
		                 <% else %>
		                    <img src="/image/profie.png" alt="photo profil candidats", width="120px" />
		                 <% end %>
		               </div>
		               <div class="col-sm-6 ss">
		                 <div class="desc-candd">
		                   <h4 class="name"><%= cadre.first_name %> <%= cadre.last_name %></h4>
		                   <h4 class="score">Test Potentiel : <span><%= cadre.score_potential %></span></h4>
		                   <h4 class="score">Test Fit : <%= cadre.score_fit.nil? ? "test non initier" : "#{cadre.compatibilite}" %></h4>
		                 </div>
		               </div>
		               <div class="col-sm-3">
		                 <div class="cont-btn">
		                 	<a class='mybtn-sh' href="<%= admin_cadre_show_profile_path(cadre.id) %>">Voir</a>
		                 </div>
		               </div>
		               </div>
		             </div>
				<% end %>
				<div class="auc">
						<p id="para-info-js" style="display: none;">Aucun candidats</p>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$("#potential_test_js").click(function () {
		$(".click_potential_test").show(300);
		$(".click_fit_test").hide(300);
		$("#para-info-js").hide()
		if ($(".click_potential_test").length == 0) {
			$("#para-info-js").show()
		}
	});
	$("#fit_test_js").click(function () {
		$(".click_fit_test").show(300);
		$(".click_potential_test").hide(300);
		$("#para-info-js").hide()
		if ($(".click_fit_test").length == 0) {
			$("#para-info-js").show()
		}
	});
	$("#rehetra_js").click(function(){
		$(".click_fit_test").show(300);
		$(".click_potential_test").show(300);
		$("#para-info-js").hide()
		if ($(".click_fit_test").length == 0 && $(".click_potential_test").length == 0) {
			$("#para-info-js").show()
		}
	});
</script>
