<link rel="stylesheet" href="/css/admin_prms.css" />
<div class="client-column">
  <div class="client-menu-left">
    <%= render partial: "admin_administrations/left_menu" %>
  </div>

  <div class="cp-box">
    <h1>PAIEMENT</h1>

	<div>
		<h2>Liste des recruteurs en mode paiement</h2>
<!--
	Le recruteur a validé
	J'atteste régler cette facture par virement dans les 15 jours.
	15j son passé et il n'a pas encore payer la facture.
-->
		<% if @factureConfirmedPayeds.empty?  %>
			<p>aucune facture</p>
		<% else %>
			<% @factureConfirmedPayeds.each do |factureConfirmedPayed| %>
				<!-- <%= factureConfirmedPayed[:client] %> -->
				<p>
					Facture n°: <%= factureConfirmedPayed[:facture].numero_facture %><br>

					<%= factureConfirmedPayed[:promise_to_hire].offre_job.intitule_pote.upcase %><br>

					<a href="<%= dashbord_admin_show_facture_path(factureConfirmedPayed[:facture].id) %>">VOIR</a>
				</p>
			<% end %>
		<% end %>
	</div>

	<div>
		<h2>Liste des recruteurs qui ont validé le paiement</h2>
<!--
	le recruteur a uploader l'ov
-->
		<% if @facturePayeds.empty?  %>
			<p>aucune facture</p>
		<% else %>
			<% @facturePayeds.each do |facture| %>
				<p>
					Facture n°: <%= facture.numero_facture %><br>
					<%= facture.promise_to_hire.offre_job.intitule_pote.upcase %><br>
					<a href="<%= dashbord_admin_show_facture_path(facture.id) %>">VOIR</a>
				</p>
			<% end %>
		<% end %>
	</div>

  </div>
</div>
