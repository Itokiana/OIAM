<% @title="Clients" %>
<link rel="stylesheet" href="/css/offer_client_admin.css" />
<style>
.nw-cont {
  width: 100%;
  margin-top: 20px;
}

.cont-filter {
  position: relative;
  width: 400px;
  float: right;
}
.filter {
  padding-top: 20px;
  padding-bottom: 20px;
/*      border-bottom: 1px solid rgba(0,0,0,.1);*/
}

.filter span {
  align-items: flex-end;
  background: #E3D7BF;
  color: #fff;
  cursor: pointer;
  font-size: 10px;
  padding: 10px 30px;
  text-transform: uppercase;
  border: 1px solid #E3D7BF;
}

.filter span:hover {
  background: #fff;
  color: #E3D7BF;
  border: 1px solid #E3D7BF;
}

.candd {
  clear: both;
  margin-top: 20px;
  border-top: 1px solid rgba(0,0,0,.1);
  padding: 20px;
  border-bottom: 1px solid rgba(0,0,0,.1);
  position: relative;
}

.desc-candd {
  margin-top: 30px;
  text-align: center;
}

.name {
  text-decoration: none;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

.score {
  text-decoration: none;
  text-align: center;
  font-size: 14px;
}

.cont-btn {
  margin-top: 40px;
}

.entr-fit {
  font-size: 14px;
}

.icon-oi {
  height: 10px;
  position: absolute;
  top: 0;
  right: 0;
}

.cont-btn a {
  color: #fff !important;
  background: #d6b36a !important;
  padding: 10px 40px !important;
  cursor: pointer !important;
  border: 1px solid #d6b36a !important;
}

.cont-btn a:hover {
  border: 1px solid #d6b36a !important;
  color: #d6b36a !important;
  background: #fff !important;
}

.prop {
  font-size: 14px;
}

  .btn-see {
    text-transform: uppercase;
  }
</style>
<link rel="stylesheet" href="/css/mes_cand_dash.css" />
<script src="https://kit.fontawesome.com/d06d35ede2.js" crossorigin="anonymous"></script>
<div class="client-column">
  <div class="client-menu-left">
    <%= render partial: "admin_client/left_menu_link" %>
  </div>

  <div class="cp-box">
  	<div>
  		<div class="fcp-box">
      <h3 class="title" style="color: #d6b36a !important">OFFRES EN COURS</h3>
      <div class="fc-item">
        <div class="fc-item-all">

            <div class="nw-cont">
              <div class="cont-candd">
              <% if @offre.count == 0 %>
              <h4>Il n'y a aucun offre d'emploi</h4>
              <% else %>
              <% @offre.each do |offre| %>
               <div class="candd">
                 <div class="row">
                 <div class="col-sm-3">
                      <img src="<%= offre.image %>" alt="photo profil candidats", width="150px", height="150px"  style="background-size: cover"/>
                 </div>
                 <div class="col-sm-6">
                   <div class="desc-candd">
                     <h4 class="name">Entreprise : <a href="<%= admin_client_show_client_path(offre.client.entreprise.id) %>"><%= offre.client.entreprise.name %></a></h4>
                     <h4 class="score">Poste : <%= offre.intitule_pote %></h4>
                     <h4 class="prop">Ã€ proposer une offre</h4>
                   </div>
                 </div>
                 <div class="col-sm-3">
                   <div class="cont-btn">
                   <a href="<%= admin_client_show_offer_path(offre.id) %>">VOIR L'OFFRE</a>
                   </div>
                 </div>
                 </div>
               </div>
               <% end %>
               <% end %>
                 <!-- --------------------------------------------------------------------- -->

               </div>
             </div>


        </div>
      </div>
    </div>
  	</div>
  </div>
</div>
