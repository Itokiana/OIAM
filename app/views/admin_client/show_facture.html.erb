<% @title="Clients" %>
  <link rel="stylesheet" href="/css/shownewjob.css" />

<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left">
    <%= render "admin_client/left_menu_link" %>
  </div>
  <div class="cp-box">
    <div class="show-job-box">
      <div class="show-publication" id="publish-ajax-hid">
          
            <h2>Facture n° <%= @facture.numero_facture %></h2>
            
            <table class="table">
              <tr>
                <td>
                  RIB
                </td>
                <td>
                  <a href="/image/rib.jpg"> TÉLÉCHARGER </a>
                </td>
              </tr>

              <tr>
                <td>
                  Facture (pdf)
                </td>
                <td>
                  <a href="<%= facturation_pdf_to_pdf_path(@facture.id) %>">TÉLÉCHARGER</a>
                </td>
              </tr>

              <tr>
                <td>
                  Entreprise
                </td>
                <td>
                  <a href="<%= admin_client_show_client_path(@client.id) %>">
                    <%= @facture.client.entreprise.name.capitalize %>
                  </a>
                </td>
              </tr>

              <tr>
                <td>
                  Intitulé du poste
                </td>
                <td>
                  <a href="<%= admin_client_show_offer_path(@pTh.offre_job.id) %>"><%= @pTh.offre_job.intitule_pote %></a>
                </td>
              </tr>

              <tr>
                <td>
                  Cadre embauché
                </td>
                <td>
                  <a href="<%= admin_cadre_show_profile_path(@cadreInfo.id) %>">
                    <%= @cadreInfo.first_name.upcase %> <%= @cadreInfo.last_name.capitalize %>
                  </a>
                </td>
              </tr>

              <tr>
                <td>
                  Précalcul honoraires OIAM
                </td>
                <td>
                  <%= @facture.prix %>€
                </td>
              </tr>

              <tr>
                <td>
                  Status
                </td>
                <td>
                  <% if @facture.is_payed == true %>
                    Payer
                  <% else %>
                    Non Payer
                  <% end %>
                </td>
              </tr>

              <% if @facture.is_payed == true %>
                <tr>
                  <td>
                    Ordre de virement
                  </td>
                  <td>
                    <a href="<%= @facture.ov %>">TÉLÉCHARGER</a>
                  </td>
                </tr>
              <% else %>
                <tr>
                  <td rowspan="2">

                    <% if @pTh.payed %>
                      <p><%= @client.entreprise.name.capitalize %> a confirmé de régler la facture par virement dans les 15 jours.</p>
                    <% else %>
                      <p><%= @client.entreprise.name.capitalize %> n'a pas confirmé de régler la facture par virement dans les 15 jours.</p>
                    <% end %>

                  </td>
                </tr>
              <% end %>

              

              

            </table>
        
      </div>
    </div>
  </div>
</div>