<% @title="Clients" %>
<style media="screen">
  .fact-all {
    border: 2px solid #ccc;
    padding: 50px;
    -webkit-box-shadow: 10px 10px 20px -18px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 10px 20px -18px rgba(0,0,0,0.75);
    box-shadow: 10px 10px 20px -18px rgba(0,0,0,0.75);
  }

  .down-fl a {
    text-align: center;
    background: #d6b36a;
    padding: 10px 40px;
    color: #fff;
    text-decoration: none;
  }

  .down-fl a:hover {
    text-decoration: none;
  }

  .txt-fl a {
    text-decoration: none;
    text-transform: capitalize;
    color: #d6b36a;
    text-align: center;
    justify-content: center;
    display: flex;
  }

  .txt-fl {
    text-decoration: none;
    text-transform: capitalize;
    color: #d6b36a;
    text-align: center;
    justify-content: center;
    display: flex;
  }

</style>
  <link rel="stylesheet" href="/css/shownewjob.css" />
  <script src="https://kit.fontawesome.com/d06d35ede2.js" crossorigin="anonymous"></script>
<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left">
    <%= render "admin_client/left_menu_link" %>
  </div>
  <div class="cp-box">
    <div class="show-job-box">
      <div class="show-publication" id="publish-ajax-hid">
        <div class="fact-all">
          <h2>Facture n° <%= @facture.numero_facture %></h2>
          <table class="table">
            <tr>
              <td>
                Entreprise
              </td>
              <td class="txt-fl">
                <a href="<%= admin_client_show_client_path(@client.id) %>">
                  <%= @facture.client.entreprise.name.capitalize %>
                </a>
              </td>
            </tr>
            <tr>
              <td>
                Intitulé du poste
              </td>
              <td class="txt-fl">
                <a href="<%= admin_client_show_offer_path(@pTh.offre_job.id) %>"><%= @pTh.offre_job.intitule_pote %></a>
              </td>
            </tr>
            <tr>
              <td>
                Cadre embauché
              </td>
              <td class="txt-fl">
                <a href="<%= admin_cadre_show_profile_path(@cadreInfo.id) %>">
                  <%= @cadreInfo.first_name.upcase %> <%= @cadreInfo.last_name.capitalize %>
                </a>
              </td>
            </tr>
            <tr>
              <td>
                Précalcul honoraires OIAM
              </td>
              <td class="txt-fl">
                <%= @facture.prix %>€
              </td>
            </tr>
            <tr>
              <td>
                Status
              </td>
              <td class="txt-fl">
                <% if @facture.is_payed == true %>
                  Payer
                <% else %>
                  Non Payer
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                RIB
              </td>
              <td class="down-fl">
                <a href="/image/rib.jpg"> TÉLÉCHARGER <i class="fas fa-file-download"></i></a>
              </td>
            </tr>
            <tr>
              <td>
                Facture (pdf)
              </td>
              <td class="down-fl">
                <a href="<%= facturation_pdf_to_pdf_path(@facture.id) %>">TÉLÉCHARGER <i class="fas fa-file-download"></i></a>
              </td>
            </tr>
            <% if @facture.is_payed == true %>
              <tr>
                <td>
                  Ordre de virement
                </td>
                <td class="down-fl">
                  <a href="<%= @facture.ov %>">TÉLÉCHARGER</a>
                </td>
              </tr>
            <% else %>
              <tr>
                <td rowspan="2">
                  <% if @pTh.payed %>
                    <p><%= @client.entreprise.name.capitalize %> a confirmé de régler la facture par virement dans les 15 jours.</p>
                  <% else %>
                    <p><%= @client.entreprise.name.capitalize %> n'a pas confirmé de régler la facture par virement dans les 15 jours.</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
