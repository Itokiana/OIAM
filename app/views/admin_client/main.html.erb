<% @title="Clients" %>
<!-- call css  -->
  <link rel="stylesheet" href="/css/my_job_offre.css" />
<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left"><%= render "admin_client/left_menu_link" %></div>
  <div class="cp-box">
    <div class="box-inside">
      <% if @offre.count == 0 %>
      <div class="co-any-job">
        <p>Il n'y  a aucun recrutement</p>
      </div>
      <% else %>
      <div class="co-with-job">
        <h5>RECRUTEMENT EN COURS</h5>

        <% @offre.each do |offre| %>
        <hr />
        <div class="coj-box" id="offre<%= offre.id %>">
          <div class="cjo-image">
            <img src="/image/work.png" alt="icone work" />
          </div>
          <div class="cjo-content"><%= offre.client.entreprise.name.upcase %></div>
          <div class="cjo-link-items">
            <div class="cjo-link"><%= link_to "VOIR RECRUTEMENT"%></div>
          </div>
        </div>
        <hr />
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

