<link rel="stylesheet" type="text/css" href="/css/my_messages.css" />
<style>
  .mes {
    text-align: center;
  }

  .mes h4 {
    font-size: 14px;
    font-weight: 200;
    font-family: Raleway, sans-serif;
  }

</style>
<div class="all-content">
  <div class="left-content"><%= render partial: "admin_main/left_menu_message_link" %></div>

  <div class="main">
    <h2 class="main-title">MA MESSAGERIE</h2>
    <% if @contactCadre.count == 0 %>
    <div class="mes">
      <h4>Aucun contact d'un candidat</h4>
    </div>
    <% else %>
    <% @contactCadre.each do |contact| %>
    <!-- <% nbr = contact.mp_cadre_not_see %> -->
    <a href="<%= show_my_messages_cadre_path(contact.client.id) %>" class="btn-voir <% if nbr == 0 %>color<% end %>">
    <div class="message">
      <div class="block-image">
        <%= image_tag(contact.cadre.cadre_info.image, alt: 'photo de profil', class:"pdp" )%>
        <% if contact.cadre.cadre_info.is_online? %>
          <span class="connected"></span>
        <% end %>
        </div>
      <div class="message-content">
        <div class="recruteur-name"><%= contact.cadre.cadre_info.first_name %> <%= contact.cadre.cadre_info.last_name %></div>
        <div class="message-body">
          <% unless nbr == 0 %>
            <span class="alert-info"><%= nbr %></span>
          <% end %>
          <!-- <% unless contact.message_client_cadres.last.is_client %>vous : <%end%> <%= contact.message_client_cadres.last.content %> -->
        </div>
      </div>
      <div class="connected-times">
          <% unless contact.cadre.cadre_info.is_online? %>
            <span class="not-connected">Connect√©e il y a <%= time_ago_in_words(contact.cadre.cadre_info.online_time) %></span>
          <% end %>
        </div>
    </div>
    </a>
    <% end %>
    <% end %>
  </div>
</div>
