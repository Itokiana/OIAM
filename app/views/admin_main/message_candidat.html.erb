<% @title="Messagerie" %>
<link rel="stylesheet" type="text/css" href="/css/my_messages.css" />
<style>
  .mes {
    text-align: center;
  }

  .mes h4 {
    font-size: 14px;
    font-weight: 200;
    font-family: Raleway, sans-serif;
  }

  .cont-ms {
    position: relative;
  }

  .ms-main {
    position: fixed;
    right: 20px;
    width: 400px;
    bottom: 10px;
    z-index: 6;
  }

</style>
<div class="all-content">
  <div class="left-content"><%= render partial: "admin_main/left_menu_message_link" %></div>

  <div class="main">
    <h2 class="main-title">MA MESSAGERIE</h2>
    <% if @contactCadre.count == 0 %>
    <div class="mes">
      <h4>Aucun contact d'un candidat</h4>
    </div>
    <% else %>
    <% @contactCadre.each do |contact| %> <% nbr = contact.mp_admin_not_see %>
    <a href="<%= admin_show_messaging_path(contact.cadre.id) %>" class="btn-voir <% if nbr == 0 %>color<% end %>" data-remote="true">
    <div class="message">
      <div class="block-image">
        <% if contact.cadre.cadre_info.image.nil? %>
          <img src="/image/profie.png" class="pdp" alt='photo de profil'>
        <% else %>
          <%= image_tag(contact.cadre.cadre_info.image, alt: 'photo de profil', class:"pdp" )%>
        <% end %>
        <% if contact.cadre.is_online? %>
          <span class="connected"></span>
        <% end %>
        </div>
      <div class="message-content">
        <div class="recruteur-name"><%= contact.cadre.cadre_info.first_name %> <%= contact.cadre.cadre_info.last_name %></div>
        <div class="message-body">
          <% unless contact.message_admin_cadres.last.is_admin %>
          <% unless nbr == 0 %>
            <span class="alert-info"><%= nbr %></span>
          <% end %>
          <% end %>
          <% if contact.message_admin_cadres.last.is_admin %>vous : <%end%> <%= contact.message_admin_cadres.last.content %>
        </div>
      </div>
      <div class="connected-times">
          <% unless contact.cadre.is_online? %>
            <span class="not-connected">Connect√©e il y a <%= time_ago_in_words(contact.cadre.online_time) %></span>
          <% end %>
        </div>
    </div>
    </a>
    <% end %>
    <% end %>
  </div>
  <div class="cont-ms">
    <div class="ms-main"></div>
  </div>
</div>
