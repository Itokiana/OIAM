<link rel="stylesheet" href="/css/admin_prms.css" />

<div class="client-column">
  	<div class="client-menu-left">
    	<%= render partial: "admin_clients/left_menu" %>
  	</div>

  	<div class="cp-box">
  		<h1>Messagerie</h1>
		<div class="card">
		  	<div class="card-body">
		  	    <% if @contactClient.nil? %>
				    <div class="mes">
				      <h4>Aucun contact d'un candidat</h4>
				    </div>
				<% else %>
					<% @contactClient.each do |contact| %><% nbr = contact.mp_admin_not_see %>
						<a href="<%= clients_show_message_path(contact.client.id) %>" class="btn-voir  <% if nbr == 0 %>color<% end %>">
						<div class="message">
							<div class="block-image">
						        <% if contact.client.image.nil? %>
						          <img src="/image/profie.png" class="pdp" alt='photo de profil'>
						        <% else %>
						          <%= image_tag(contact.client.image, alt: 'photo de profil', class:"pdp" )%>
						        <% end %>
						        <% if contact.client.is_online? %>
						          <span class="connected"></span>
						        <% end %>
					        </div>
		  					<div class="message-content">
		    					<div class="recruteur-name">
		    						Entreprise :<%= contact.client.entreprise.name %>  Recruteur: <%= contact.client.first_name %> <%= contact.client.last_name %>
		    					</div>
		    					<div class="message-body">
						          <% unless contact.message_admin_clients.last.is_admin %>
							          <% unless nbr == 0 %>
							            <span class="alert-info"><%= nbr %></span>
							          <% end %>
						          <% end %>
						          <% if contact.message_admin_clients.last.is_admin %>vous : <%end%> <%= contact.message_admin_clients.last.content %>
					       		</div>
		  					</div>
		  					<div class="connected-times">
					          <% unless contact.client.is_online? %>
					            <span class="not-connected">Connect√©e il y a <%= time_ago_in_words(contact.client.online_time) %></span>
					          <% end %>
					        </div>
						</div>
						</a>
					<% end %>
				<% end %>
		  	</div>
		</div>  		
  	</div>
</div>