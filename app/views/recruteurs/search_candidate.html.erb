<!-- call css  -->
<% content_for :head_style do %>
  <link rel="stylesheet" href="/css/searchcandidat.css" />
<% end %>
<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left"><%= render "recruteurs/left_link_bar" %></div>
  <div class="cp-box">
    <div class="select-cadre-box">
      <table class="table">
        <tr>
          <td>
            <div class="co-input hide-right">
              <select name="Localisation" id="cars" class='co-select'>
                <option value="Localisation" disabled selected>Localisation</option>
                <option value="Auvergne-Rhône-Alpes">Auvergne-Rhône-Alpes</option>
                <option value="Bourgogne-Franche-Comté">Bourgogne-Franche-Comté</option>
                <option value="Bretagne">Bretagne</option>
                <option value="Centre-Val de Loire">Centre-Val de Loire</option>
                <option value="Corse">Corse</option>
                <option value="Grand Est">Grand Est</option>
                <option value="Hauts-de-France">Hauts-de-France</option>
                <option value="Île-de-France">Île-de-France</option>
                <option value="Normandie">Normandie</option>
                <option value="Nouvelle-Aquitaine">Nouvelle-Aquitaine</option>
                <option value="Occitanie">Occitanie</option>
                <option value="Pays de la Loire">Pays de la Loire</option>
                <option value="Provence-Alpes-Côte d'Azur">Provence-Alpes-Côte d'Azur</option>
              </select>
            </div>
          </td>
          <td>
            <div class="co-input hide-right">
              <select name="Fonction" id="cars" class='co-select'>
                <option value="Fonction" disabled selected>Fonction</option>
                <% @metiers.each do |metier| %>
                  <option value="<%= metier.id %>"><%= metier.name %></option>
                <% end %>
              </select>
            </div>
          </td>
          <td>
            <div class="co-input hide-right">
              <select name="Rémunération" id="cars" class='co-select'  >
                <option value="" disabled selected>Rémunération</option>
                <option value="60 k€">60 k€</option>
                <option value="70 k€">70 k€</option>
                <option value="80 k€">80 k€</option>
                <option value="90 k€">90 k€</option>
                <option value="100 k€">100 k€</option>
                <option value="110 k€">110 k€</option>
                <option value="120 k€">120 k€</option>
                <option value="130 k€">130 k€</option>
                <option value="140 k€">140 k€</option>
                <option value="150 k€">150 k€</option>
                <option value="160 k€">160 k€</option>
                <option value="170 k€">170 k€</option>
                <option value="180 k€">180 k€</option>
                <option value="190 k€">190 k€</option>
                <option value="200 k€">200 k€</option>
                <option value="210 k€">210 k€</option>
                <option value="220 k€">220 k€</option>
                <option value="230 k€">230 k€</option>
                <option value="240 k€">240 k€</option>
                <option value="250 k€">250 k€</option>
                <option value="260 k€">260 k€</option>
                <option value="270 k€">270 k€</option>
                <option value="280 k€">280 k€</option>
                <option value="290 k€">290 k€</option>
                <option value="300 k€">300 k€</option>
                <option value="310 k€">310 k€</option>
                <option value="320 k€">320 k€</option>
                <option value="330 k€">330 k€</option>
                <option value="340 k€">340 k€</option>
                <option value="350 k€">350 k€</option>
              </select>
            </div>
          </td>
          <td>
            <div class="co-input hide-right">
              <select name="Disponibilité" id="cars" class='co-select'  >
                <option value="Disponibilité" disabled selected>Disponibilité</option>
                <option value="IMMÉDIATE">IMMÉDIATE</option>
                <option value="PRÉAVIS 1 MOIS">PRÉAVIS 1 MOIS</option>
                <option value="PRÉAVIS 3 MOIS">PRÉAVIS 3 MOIS</option>
                <option value="PRÉAVIS 3 À 6 MOIS">PRÉAVIS 3 À 6 MOIS</option>
                <option value="PRÉAVIS > 6 MOIS">PRÉAVIS > 6 MOIS</option>
              </select>
            </div>
          </td>
          <td class="td-button">Recherche</td>
        </tr>
      </table>
      <div class="select-cadre-list">
        <div class="flex-candidates">
          <% 5.times do |i| %> <% if @topCinqs[i].nil? %>
          <div class="js-candidates-list" data-element="" data-info="true"></div>
          <% else %>
          <div class="js-candidates-list" data-element="" data-info="false"><%= image_tag(@topCinqs[i].cadre.cadre_info.image, alt: 'photo profil cadre', height:"150px", width:"100px" )%></div>
          <% end %> <% end %> <% if @topCinqs.count < 5 %>
          <div class="validation">
            <%= form_tag(add_top_five_candidate_path(@offre.id)) do %>
            <input type="hidden" name="cadre_ids" value="[]" id="input_cadre_ids" />
            <div class="submit-validation"><%= submit_tag("VALIDER MA SELECTION", id:'boutton-bottom',class:'validation-bt') %> <%= submit_tag("VALIDER ", id:'boutton-bottom',class:'validation-bt1') %></div>
            <% end %>
          </div>
          <% end %>
        </div>
        <div class="select-cadre-list-items">
          <% @cadres.each do |cadre| %>
          <div class="cadre-box">
            <div class="cadre-box-image">
              <div class="cbi-photo">
                <%= link_to show_search_candidate_path(cadre.id, offre_id: @offre.id), method: :get do %>
                  <div class="c " style="background: url(<%= cadre.cadre_info.image%>) center no-repeat; background-size: cover"></div>
                <% end %>
                  <%= image_tag(cadre.cadre_info.image, alt: 'photo profil cadre', class:"js-image-#{cadre.id} " ,style:'display:none')%> 
                </div>
              <div class="icone">
                <% oFc = @offre.is_in_this_job(cadre) %> <% if oFc.nil? || oFc.accepted_postule.nil? || oFc.accepted_postule == false %> <% if @topCinqs.count < 5 %>
                <img class="add-js-toFavorite" data-info="<%= cadre.id %>" src="/image/Vector-22.png" alt="logo oiam non favorie" />
                <% end %> <% else %>
                <img class="alreadyFavorite" src="/image/Vector-24.png" alt="logo oiam favorie" />
                <% end %>

                <img class="rmv-js-toFavorite" data-info="<%= cadre.id %>" src="/image/Vector-24.png" alt="logo oiam favorie" style="display: none" />
              </div>
            </div>
            <div class="cadre-box-info">
              <p class="name"><%= cadre.cadre_info.first_name %> <%= cadre.cadre_info.last_name[0].upcase %>.</p>
              <p class="compatibilite">Compatibilité : <span>60%</span></p>
              <p class="score">Score OIAM : <span>1700</span></p>
              <p class="poste">Type de poste : 
                <% if cadre.cadre_info.metier.nil? %>
                  Manager marketing
                <% else %>
                  <%= cadre.cadre_info.metier.name %>
                <% end %>
              </p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script data-turbolinks-track="reload" type="text/javascript" src="/js/add_favorite_cadre.js"></script>
