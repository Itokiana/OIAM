<!-- call css  -->
<% content_for :head_style do %>
<link rel="stylesheet" href="/css/searchcandidat.css" />
<% end %>
<!-- body html  -->
<div class="client-column">
  <div class="client-menu-left"><%= render "recruteurs/left_link_bar" %></div>
  <div class="cp-box">
    <div class="select-cadre-box">
      <div class="search">
      <%= form_tag(search_bar_cadre_path, remote:true, id:"send-data-form") do %>
        <input type="hidden" name="id" value="<%= @offre.id %>">
        <div class="search-large">
          <div class="co-input hide-right">
            <select name="region" id="cars" class="co-select">
              <option value="" disabled selected>Localisation</option>
              <option value="all">France entière</option>
              <% @regions.each do |region| %>
                <option value="<%= region.id %>"><%= region.name %></option>
              <% end %>
            </select>

          </div>
          <div class="co-input hide-right">
            <select name="metier" id="cars" class="co-select">
              <option value="" disabled selected>Fonction</option>
              <% @metiers.each do |metier| %>
              <option value="<%= metier.id %>"><%= metier.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="search-short">
          <div class="co-input hide-right">
            <select name="remuneration" id="cars" class="co-select">
              <option value="" disabled selected>Rémunération</option>
              <option value="60">60 k€</option>
              <option value="70">70 k€</option>
              <option value="80">80 k€</option>
              <option value="90">90 k€</option>
              <option value="100">100 k€</option>
              <option value="110">110 k€</option>
              <option value="120">120 k€</option>
              <option value="130">130 k€</option>
              <option value="140">140 k€</option>
              <option value="150">150 k€</option>
              <option value="160">160 k€</option>
              <option value="170">170 k€</option>
              <option value="180">180 k€</option>
              <option value="190">190 k€</option>
              <option value="200">200 k€</option>
              <option value="210">210 k€</option>
              <option value="220">220 k€</option>
              <option value="230">230 k€</option>
              <option value="240">240 k€</option>
              <option value="250">250 k€</option>
              <option value="260">260 k€</option>
              <option value="270">270 k€</option>
              <option value="280">280 k€</option>
              <option value="290">290 k€</option>
              <option value="300">300 k€</option>
              <option value="310">310 k€</option>
              <option value="320">320 k€</option>
              <option value="330">330 k€</option>
              <option value="340">340 k€</option>
              <option value="350">350 k€</option>
            </select>
          </div>
          <div class="co-input hide-right">
            <select name="disponility" id="cars" class="co-select">
              <option value="" disabled selected>Disponibilité</option>
              <option value="IMMÉDIATE">IMMÉDIATE</option>
              <option value="PRÉAVIS 1 MOIS">PRÉAVIS 1 MOIS</option>
              <option value="PRÉAVIS 3 MOIS">PRÉAVIS 3 MOIS</option>
              <option value="PRÉAVIS 3 À 6 MOIS">PRÉAVIS 3 À 6 MOIS</option>
              <option value="PRÉAVIS > 6 MOIS">PRÉAVIS > 6 MOIS</option>
            </select>
          </div>
        </div>
        <div class="td-button"><%= submit_tag("RECHERCHER")%></div>
      <% end %>

      </div>

      <div class="select-cadre-list" id>
        <div class="flex-candidates">
          <% 5.times do |i| %> <% if @topCinqs[i].nil? %>
          <div class="js-candidates-list" data-element="" data-info="true" style="background: center no-repeat; background-size: cover"></div>
          <% else %>
          <div class="js-candidates-list" data-element="" data-info="false" style="background: url(<%= @topCinqs[i].cadre.cadre_info.image %>) center no-repeat; background-size: cover"></div>

          <% end %> <% end %> <% if @topCinqs.count < 5 %>
          <div class="validation">
            <%= form_tag(add_top_five_candidate_path(@offre.id)) do %>
            <input type="hidden" name="cadre_ids" value="[]" id="input_cadre_ids" />
            <div class="submit-validation"><%= submit_tag("VALIDER MA SELECTION", id:'boutton-bottom',class:'validation-bt') %> <%= submit_tag("VALIDER ", id:'boutton-bottom',class:'validation-bt1') %></div>
            <% end %>
          </div>
          <% end %>
        </div>

        <div class="select-cadre-list-items" id="list-cadre-job-js">
          
          <% @cadres.each do |cadre| %>
          <div class="cadre-box">
            <div class="cadre-box-image">
              <div class="cbi-photo">
                <%= link_to show_search_candidate_path(cadre.id, offre_id: @offre.id), method: :get do %>
                <div class="c" style="background: url(<%= cadre.cadre_info.image%>) center no-repeat; background-size: cover"></div>
                <% end %> <%= image_tag(cadre.cadre_info.image, alt: 'photo profil cadre', class:"js-image-#{cadre.id} " ,style:'display:none')%>
              </div>
              <div class="icone">
                <% oFc = @offre.is_in_this_job(cadre) %> <% if oFc.nil? || oFc.accepted_postule.nil? || oFc.accepted_postule == false %> <% if @topCinqs.count < 5 %>
                <img class="add-js-toFavorite" data-info="<%= cadre.id %>" src="/image/Vector-22.png" alt="logo oiam non favorie" />
                <% end %> <% else %>
                <img class="alreadyFavorite" src="/image/Vector-24.png" alt="logo oiam favorie" />
                <% end %>

                <img class="rmv-js-toFavorite" data-info="<%= cadre.id %>" src="/image/Vector-24.png" alt="logo oiam favorie" style="display: none" />
              </div>
            </div>
            <div class="cadre-box-info">
              <p class="name"><%= cadre.cadre_info.first_name %> <%= cadre.cadre_info.last_name[0].upcase %>.</p>
              <p class="compatibilite">Compatibilité : <span><%= cadre.cadre_info.compatibilite %>%</span></p>
              <p class="score">Score OIAM : <span><%= cadre.cadre_info.score_potential %></span></p>
              <p class="poste">Type de poste : <% if cadre.cadre_info.metier.nil? %> Manager marketing <% else %> <%= cadre.cadre_info.metier.name %> <% end %></p>
            </div>
          </div>
          <% end %>

        </div>

      </div>

    </div>
  </div>
</div>
<script data-turbolinks-track="reload" type="text/javascript" src="/js/add_favorite_cadre.js"></script>
