<div class="row">
	<div class="col-sm-3">
		<%= render partial: "recruteurs/left_link_bar" %>
	</div>

	<div class="col-sm-9">
		<center>PROMESSE D'EMBAUCHE</center>
		<div class="row">
			<div class="col-sm-6">
				<div>
					<% unless current_client.image.nil? %>
						<%= image_tag(current_client.image, alt: 'photo de profil', class:'photo_ako', width:'250px')%>
					<% end %>
				</div>
				<div><%= @promise.offre_job.intitule_pote %></div>
				<div>
					<%= @promise.offre_job.contrat_cdi ? "CONTRAT À DURÉE INDÉTERMINÉE" : "CONTRAT À DURÉE DÉTERMINÉE" %>
				</div>
			</div>

			<div class="col-sm-6">
				<div><%= @promise.cadre.cadre_info.first_name %></div>
				<div><%= @promise.cadre.cadre_info.last_name %></div>
				<div>
					<%= @promise.birthday_cadre ? @promise.birthday_cadre : "Date de naissance" %>
				</div>
				<div>
					<%= @promise.birthplace_cadre ? @promise.birthplace_cadre : "Lieu de naissance" %>
				</div>
				<div>
					<%= @promise.ns_sociale_cadre ? @promise.ns_sociale_cadre : "N° sécurité sociale" %>
				</div>
			</div>
		</div>

		<table class="table">
			<tr>
				<td>Date de prise de poste</td>
				<td><%= @promise.date_poste %></td>
			</tr>
			<tr>
				<td>Rémunération fixe<br>(k€ bruts mensuels)</td>
				<td><%= @promise.remuneration_fixe %>k€ bruts mensuels pendants <%= @promise.remuneration_fixe_date %> mois</td>
			</tr>
			<tr>
				<td>Rénumération variable<br>(k€ bruts annuels)</td>
				<td>
					<%= @promise.remuneration_variable ? "variation de #{@promise.remuneration_var_info}% " : "NON" %>
				</td>
			</tr>
		</table>

		<center>
			<div>Précalcul honoraires OIAM<br>11550€</div>
			<div>
				Avantages ou autre précision sur la rénumération:<br>
				<%= @promise.remuneration_avantage %>
			</div>
		</center>


		<table class="table">
			<tr>
				<td>Date de validité</td>
				<td><%= @promise.date_de_validite %></td>
			</tr>
			<tr>
				<td>Signature électronique entreprise</td>
				<td>
					<%= image_tag(@promise.signature_entreprise, alt: 'signature entreprise', class:'photo_ako', width:'250px')%>
				</td>
			</tr>
			<tr>
				<td>Signature électronique candidat</td>
				<td>
					<% unless @promise.signature_candidat.nil? %>
						<%= image_tag(@promise.signature_candidat, alt: 'signature candidat', class:'photo_ako', width:'250px')%>
					<% else %>
						<div><i>Signature candidat</i></div>
					<% end %>
				</td>
			</tr>
		</table>
		<center>
			<% if @promise.repons_cadre == true  %>
				<span class="btn btn-primary">TELECHARGER</span>
			<% else %>
				<%= link_to "MODIFIER", edit_promise_to_hire_path(@promise.id), class: 'btn btn-primary' %>
			<% end %>
		</center>
	</div>
</div>