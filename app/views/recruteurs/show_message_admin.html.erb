<% content_for :head_style do %>
<link rel="stylesheet" href="/css/suivi_show_post.css" />
<% end %>
<!-- body html  -->
<div class="client-column">
	<div class="client-menu-left"><%= render "recruteurs/left_link_bar" %></div>
	<div class="cp-box">
		<div class="adm-big-box">
			<div class="admin-message-box">
				<div class="name-box">
					<div id="image"
						style="background: white url(/image/profie.png) center no-repeat; background-size: cover">
					</div>
					<div class="name-connect">
						ADMINISTRATEUR
					</div>
				</div>
				<div class="chat-body">
					<% @messages.each do |message| %>
					<% if message.is_admin %>
					<div class="hr-msg">
						<%= message.content %>
					</div>
					<% else %>
					<div class="m-msg">
						<%= message.content %>
					</div>
					<% end %>
					<div class="clear"></div>
					<% end %>
				</div>
				<%= form_tag(post_message_client_admin_path) do %>
				<div class="sd">
					<input type="hidden" name="id_contact" value="<%= @contact.id%>">
					<input type="hidden" name="id_admin" value="<%= @admin.id %>">
					<textarea placeholder="rÃ©pondre..." class="ms-in" name="message_admin_client[content]"
						id="message_admin_cadre_content" required></textarea>
					<button type="submit">
						<img src="/image/send.png" alt="send" class="ms-im" />
					</button>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>