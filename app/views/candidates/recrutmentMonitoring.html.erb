<link rel="stylesheet" type="text/css" href="/css/recrutement.css" />
<style type="text/css">
	
</style>

<div class="content">
	<div class="left_link">
		<%= render partial: "candidates/left_link_bar" %>
	</div>

	<div class="main">
		<br><br><br>

		<% if @oFcs.empty? %>
		<div class="recrutement-content">
			<div class="recrutement">
				<center><h4>Vous n'avez aucun récrutement en cours pour l'instant.</h4></center>
				<div class="offre-perso">
					<%= link_to "TROUVER UNE OFFRES", searchJob_path, class:"btn-edit" %>
				</div>
			</div>
		</div>

		<% else %>

			<div class="container-flex">

			<% @oFcs.each do |oFc| %>
				<% offre_job = oFc.offre_job %>
				<div class="offre-items">
					<hr>
					<div>
						<center>
							<%= image_tag(offre_job.image, alt: 'photo de job', class:'photo_ako')%>
							<br>
							<h2><%= offre_job.client.entreprise.name %></h2>
							<h3>poste: <%= offre_job.intitule_pote %></h3>
						</center>
					</div>

					<% if oFc.accepted_postule == true %>

						<%= link_to show_recrutment_monitoring_path(oFc.id), class:'btn btn-success' do %>

							<% if oFc.status == "refused"  %>
								Candidature réfusé
							<% else %>
								<i>petit image loading</i>
								Vous êtes à l'étape n° : <%= oFc.etapes %> <br>
								Nombre d'étape totale : <%= oFc.offre_job.numberEntretien + 1 %>
							<% end %>

						<% end %>

					<% elsif oFc.accepted_postule == false  %>

						<%= link_to showSearchJob_path(oFc.offre_job.id), class:'btn btn-success' do %>
							<center>
								Demande d'entretien envoyer <br>
								<span class="btn-info">Le recruteur a refusé votre candidature</span>
							</center>
						<% end %>

					<% else %>

						<%= link_to showSearchJob_path(oFc.offre_job.id), class:'btn btn-success' do %>
							<center>
								Demande d'entretien envoyer <br>
								<span class="btn-info"> En attente de réponse</span>
							</center>
						<% end %>

					<% end %>

					<hr>
				</div>

			<% end %> <!-- fin each -->

			</div> <!-- fin container-flex -->

		<% end %> <!-- fin if else principal -->

	</div>
</div>

