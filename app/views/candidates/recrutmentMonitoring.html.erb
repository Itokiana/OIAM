<div class="row">
	<div class="col-sm-3">
		<%= render partial: "candidates/left_link_bar" %>
	</div>

	<div class="col-sm-9">
		
		<% if @oFcs.empty? %>
			<i>Vous n'avez aucun recrutement en cours pour l'instants.</i>
		<% else %>
		<% @oFcs.each do |oFc| %>
			<% offre_job = oFc.offre_job %>
			<hr>
			<div>
				<h2><%= offre_job.client.entreprise.name %></h2>
				<h3>poste: <%= offre_job.intitule_pote %></h3>
			</div>
			<%= link_to "Mon progression", show_recrutment_monitoring_path(oFc.offre_job.id), class:'btn btn-success'%>

			<hr>
		<% end %>
		<% end %>

	</div>
</div>

