	if (document.URL.indexOf('#') == -1) {
		// Set the URL to whatever it was plus "#".
		url = document.URL + '#';
		location = '#';
		//Reload the page
		location.reload(true);
	  }
	   //scroll bottom
	var container = document.querySelector('#js-add-new-message');
	container.scrollTop = container.scrollHeight;
</script>

