<style type="text/css">
	.photo_ako{
		width: 150px;
	}
</style>

<div class="row">
	<div class="col-sm-3">
		<%= render partial: "candidates/left_link_bar" %>
	</div>

	<div class="col-sm-9" id="publish-ajax-hid">
		<div class="row">
			<div class="col-sm-3">
				<% unless @offre.image.nil? %>
					<%= image_tag(@offre.image, alt: 'photo de profil', class:'photo_ako')%>
				<% end %>
			</div>

			<div class="col-sm-9">
				<%= @offre.intitule_pote %> <br>

				<%= @offre.department %> <br>

				<% if @offre.contrat_cdi %>
					Contrat CDI
				<% else %>
					Contrat CDD
				<% end %>

			</div>
		</div>
		<hr>

		<div>
			<center><%= @offre.question2 %></center>
		</div>

		<div>
			<h3>DESCRIPTIF DES MISSIONS</h3>
			<p>
				<%= @offre.descriptif_mission %>		
			</p>
		</div>
		<div>
			<h3>RATTACHEMENT HIÉRARCHIQUE</h3>
			<p><%= @offre.rattachement %></p>	
		</div>
		<div>
			<h3>RÉMUNÉRATION (K€ BRUTS ANNUELS)</h3>
			<p>
				Fixe: <%= @offre.remuneration.to_i %> <br>
				Variable: <%= @offre.remuneration_anne.to_i %>
			</p>
		</div>
		<div>
			<h3>DÉPLACEMENTS</h3>
			<p>
				<%= @offre.type_deplacement %>
			</p>
		</div>
		<div>
			<h3>PROCESSUS RH</h3>
			<p>
				<%= @offre.question3 %>
			</p>
		</div>
		<div>
			<h3>CONTEXTE D'OUVERTURE DE CE POSTE</h3>
			<p>
				<%= @offre.question5 %>
			</p>
		</div>

		<div>
			<h3>DATE DE PRISE DE POSTE</h3>
			<p>
				<%= @offre.date_poste %>
			</p>
		</div>

		<% if @offre.is_in_this_job(current_cadre).nil? %>
			<div id="link-to-send-post">
				<%= link_to "POSTULER", apply_for_job_path(id:@offre.id), method: :post, remote: true, id:'send-candidature', class:'btn btn-primary' %>
			</div>
			<div id="modal-ajax-bull" style="display: none; background-color: #e3b465;">
				Votre demande d'entretien a été envoyée <br>
				<center id="plus-plus"> ... </center>
			</div>
		<% else %>
			<div>
				<span class="btn btn-primary">VOUS ÊTES POSTULÉ À CETTE OFFRE</span>
			</div>
		<% end %>

	</div>

</div>


<script type="text/javascript">
	
	$('#send-candidature').bind('ajax:beforeSend', function() {
		$('#modal-ajax-bull').show();
	});

	$('#send-candidature').bind('ajax:complete', function() {
		$("#plus-plus").html('<img src="/image/check.png" width="10px" alt="check">')
		$("#link-to-send-post").html('<span class="btn btn-primary">VOUS ÊTES POSTULÉ À CETTE OFFRE</span>')
	});

</script>


