<!DOCTYPE html>
<html>
  <head>
    <title>One in a Million</title>
    <%= csrf_meta_tags %> <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Qwigley&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600&display=swap" rel="stylesheet" />
    <%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track': 'reload' %> <%= javascript_include_tag'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/css/mobile.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/burger.css" />
    <link rel="stylesheet" href="/css/footer.css" />

    <!------------------------------ bootstrap css ------------------------------>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />
    <!------------------------------ bootstrap css ------------------------------>
    <% if content_for?(:head_style) %>
      <%= yield(:head_style) %>
    <% end %>
  </head>

  <body>
    <% if @header.nil? %>
    <div class="navbar-controll bg-inside"><%= render "layouts/navbar" %></div>
    <% else %> <% unless @new_nav_bar.nil? %>
    <!-- ito ny navbar ny admin topoko -->
    <%= render "layouts/navbar_admin" %> <% end %> <% end %>
    <!-- ~~~~~~~~~~~~~~~~~~~ Alert devise ito ~~~~~~~~~~~~~~~~~~~ -->
    <div class="flash">
      <% if notice %>
      <div class="flash-notice">
        <div class="icon">
          <img src="/image/flash-valid.png" alt="Icone" />
        </div>
        <div><%= notice %></div>
      </div>
      <% end %> <% if alert %>
      <div class="flash-alert">
        <div class="icon">
          <img src="/image/flash-unvalid.png" alt="Icone" />
        </div>
        <div><%= alert %></div>
      </div>
      <% end %>
    </div>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <%= yield %> <% if @header.nil? %>
    <div class="footer-controll"><%= render "layouts/footer" %></div>
    <% end %>

    <script type="text/javascript" data-turbolinks-track="reload" src="/js/check_path.js"></script>
  </body>
</html>
