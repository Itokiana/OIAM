<!-- appel log-cadre.css  -->
<link rel="stylesheet" href="/css/log-cadre.css" />
<!-- body html login  -->
<div class="log-page">
  <div class="form-log">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form class="log-form">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'IDENTIFIANT', class:'log-input' %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder:'MOT DE PASSE', class:'log-input' %>
      
      <%= f.submit "SE CONNECTER", class:'log-button' %>
      <% if devise_mapping.rememberable? %>
      <div class="log-rem">
        <%= f.check_box :remember_me, class:'form-check-input' %>
        <%= f.label :remember_me, 'Se souvenir de moi', class:'form-check-label' %>
      </div>
    <% end %>
      <p class="log-message">Pas encore de compte? <%= link_to "S'INSCRIRE", tmp_sign_up_path %></p>
    </form>
  <% end %>
  </div>
</div>

