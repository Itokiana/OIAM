<link rel="stylesheet" type="text/css" href="/css/inscription_edit_cadre.css">
<div class="main">
  <h2 class="edit-inscription-title">Edit <%= resource_name.to_s.humanize %> CANDIDAT</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class=> 'form-for' })do |f| %>
    <%= render "cadres/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "champs" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "champs", placeholder: "Nouveau mot de passe" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "champs", placeholder: "Confirmer nouveau mot de passe" %>
    </div>

    <div class="field">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "champs", placeholder: "Nouveau mot de passe" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>

</div>
